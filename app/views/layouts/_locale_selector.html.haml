= form_tag({ controller: @redirect_controller, 
             action: @redirect_action },
             method: 'get',
             class: 'locale') do
  = select_tag 'set_locale', 
               options_for_select(LANGUAGES, I18n.locale)
  = hidden_field_tag 'page', params[:page] if params[:page]
  = submit_tag 'submit'